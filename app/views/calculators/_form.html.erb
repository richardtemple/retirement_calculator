<div class="text-center container">
  <div class=" well well-lg " id="calculator" >
    <h1 id="title">Retirement Calculator</h1>
    <%= form_for @calculator, remote: true, url: calculator_path do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      
      <div class="form-group spacer">
        <%= f.label :current_savings %>
        <%= f.text_field :current_savings, value: number_with_precision(@calculator.current_savings, :precision => 2), class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :interest_rate %>
        <%= f.text_field :interest_rate, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :annual_contributions %>
        <%= f.text_field :annual_contributions, value: number_with_precision(@calculator.annual_contributions, :precision => 2), class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :inflate_contributions %>
        <%= f.check_box :inflate_contributions, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :inflation_rate %>
        <%= f.text_field :inflation_rate, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :current_age %>
        <%= f.number_field :current_age, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :retirement_age %>
        <%= f.number_field :retirement_age, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :withdraw_until_age %>
        <%= f.number_field :withdraw_until_age, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :post_retire_interest_rate %>
        <%= f.text_field :post_retire_interest_rate, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= f.label :retirement_tax_rate %>
        <%= f.text_field :retirement_tax_rate , class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :show_in_todays_dollars %>
        <%= f.check_box :show_in_todays_dollars, class: 'form-control'  %>
      </div>
      <div class="actions">
        <%= button_to "Calculate!", calculator_path(), remote: true, class: 'btn btn-primary' %>
      </div>
      <p>
      <div class="text-center spacer" id="total">
        <h4>
          <%= f.label :yearly_retirement_income %>:&nbsp;
          <label id="yearly-total"></label>
          <%= number_to_currency @calculator.yearly_retirement_income, id: "yearly-total" %>
        </h4>
      </div>
    <% end %>
  </div>
</div>